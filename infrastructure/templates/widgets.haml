- for row in widgets
  .widget_row
    %h2 {{row.title}}
    - for widget in row.widgets
      .widget
        %h6{class: '{{widget.widget_class}}' }
          - if widget.headline_link
            %a{href: '{{widget.headline_link}}' }= widget.headline
          - else
            = widget.headline
        .content
          %h2 {{widget.value}}
        - if widget.subtitle
          .subtitle
            %h5 {{widget.subtitle}}
